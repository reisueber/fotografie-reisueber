<div>
    <h2 class="text-6xl text-center mt-[70px] mb-[70px]">Was mache ich alles</h2>
</div>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-5">
    <div class="order-1 md:order-1 lg:order-1">
        {% if content.service_image_1 %}
            <img class="h-auto max-w-full rounded-lg" src="{{ content.service_image_1.url }}" alt="">
        {% endif %}
    </div>
    <div class="flex items-center justify-center order-2 md:order-2 lg:order-2">
        <div class="px-5">{{ content.service_text_1|raw }}</div>
    </div>
    <div class="order-3 md:order-4 lg:order-3">
        {% if content.service_image_2 %}
            <img class="h-auto max-w-full rounded-lg" src="{{ content.service_image_2.url }}" alt="">
        {% endif %}
    </div>
    <div class="flex items-center justify-center order-4 md:order-3 lg:order-4">
        <div class="px-5">{{ content.service_text_2|raw }}</div>
    </div>
    <div class="flex items-center justify-center order-6 md:order-6 lg:order-5">
        <div class="px-5">{{ content.service_text_3|raw }}</div>
    </div>
    <div class="order-5 md:order-5 lg:order-6">
        {% if content.service_image_3 %}
            <img class="h-auto max-w-full rounded-lg" src="{{ content.service_image_3.url }}" alt="">
        {% endif %}
    </div>
    <div class="flex items-center justify-center order-8 md:order-7 lg:order-7">
        <div class="px-5">{{ content.service_text_4|raw }}</div>
    </div>
    <div class="order-7 md:order-8 lg:order-8">
        {% if content.service_image_4 %}
            <img class="h-auto max-w-full rounded-lg" src="{{ content.service_image_4.url }}" alt="">
        {% endif %}
    </div>
</div>
