<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/app.css">

    {% block meta %}
        {{ include('@SuluWebsite/Extension/seo.html.twig', {
            seo: extension.seo|default([]),
            content: content|default([]),
            localizations: localizations|default([]),
            shadowBaseLocale: shadowBaseLocale|default(),
        }) }}
    {% endblock %}

    {% block style %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="bg-gray-50 text-gray-800 relative">

    <!-- Header -->
    <header id="main-header" class="absolute left-1/2 transform -translate-x-1/2 top-[50px] lg:w-[1200px] px-4 py-4 z-10">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex items-center justify-center space-x-4">
                <!-- Kamera-Symbol mit rundem farbigen Kreis -->
                <div class="w-[70px] h-[70px] bg-accent rounded-full flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-[50px] h-[50px]">
                    <path d="M12 9a3.75 3.75 0 1 0 0 7.5A3.75 3.75 0 0 0 12 9Z" class="fill-background" />
                    <path fill-rule="evenodd" d="M9.344 3.071a49.52 49.52 0 0 1 5.312 0c.967.052 1.83.585 2.332 1.39l.821 1.317c.24.383.645.643 1.11.71.386.054.77.113 1.152.177 1.432.239 2.429 1.493 2.429 2.909V18a3 3 0 0 1-3 3h-15a3 3 0 0 1-3-3V9.574c0-1.416.997-2.67 2.429-2.909.382-.064.766-.123 1.151-.178a1.56 1.56 0 0 0 1.11-.71l.822-1.315a2.942 2.942 0 0 1 2.332-1.39ZM6.75 12.75a5.25 5.25 0 1 1 10.5 0 5.25 5.25 0 0 1-10.5 0Zm12-1.5a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" class="fill-background" />
                    </svg>
                </div>
                
                <!-- Schriftzug -->
                <div class="text-center">
                    <h1 class="text-xl leading-none text-white">Fotografie</h1>
                    <h2 class="text-xl text-white">Reisüber</h2>
                </div>
            </div>

            <!-- Mobile Menu Button -->
            <button id="mobile-menu-button" class="md:hidden text-white p-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>

            <!-- Desktop Navigation -->
            <nav class="hidden md:block bg-white/40 rounded-full p-2 shadow-md">
                <ul class="flex justify-center space-x-4 text-gray-600">
                    {% for item in sulu_navigation_root_tree('main', 2) %}
                        <li class="flex items-center">
                            <a href="{{ sulu_content_path(item.url) }}"
                               title="{{ item.title }}"
                               class="text-white hover:text-gray-900 px-4 py-2 rounded-full">{{ item.title }}</a>
                        </li>
                        {% if not loop.last %}
                            <li class="flex items-center">
                                <span class="w-px h-5 bg-gray-400"></span>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </nav>

            <!-- Mobile Navigation -->
            <div id="mobile-menu" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
                <div class="fixed right-0 top-0 bottom-0 w-64 min-h-screen bg-white shadow-lg transform transition-transform duration-300 translate-x-full overflow-y-auto" id="mobile-menu-content">
                    <div class="p-4 flex justify-between items-center border-b">
                        <h3 class="text-lg font-semibold">Menü</h3>
                        <button id="close-mobile-menu" class="text-gray-500">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                    <nav class="p-4">
                        <ul class="space-y-6">
                            {% for item in sulu_navigation_root_tree('main', 2) %}
                                <li>
                                    <a href="{{ sulu_content_path(item.url) }}"
                                       title="{{ item.title }}"
                                       class="block text-gray-800 hover:text-gray-900 text-lg py-2">{{ item.title }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        {% block content %}
            <p class="text-center text-lg">Willkommen auf meiner Website! Diese Seite ist noch in Arbeit.</p>
        {% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-gray-100 border-t py-4">
        <div class="container mx-auto px-4 text-center text-sm text-gray-600">
            &copy; {{ "now"|date("Y") }} Fotografie Reisüber. Alle Rechte vorbehalten.
        </div>
    </footer>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
