<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>pages/homepage</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>86400</cacheLifetime>

    <meta>
        <title lang="en">Homepage</title>
        <title lang="de">Startseite</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="de">Titel</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>

        <section name="header_image">
            <meta>
                <title>Headerimage</title>
            </meta>
            <properties>
                <property name="header_image" type="single_media_selection">
                    <meta>
                        <title lang="en">Headerimage</title>
                        <title lang="de">Headerimage</title>
                    </meta>
                </property>
                <property name="header_image_mobile" type="single_media_selection">
                    <meta>
                        <title lang="en">Headerimage Mobile</title>
                        <title lang="de">Headerimage Mobile</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="campaigns">
            <meta>
                <title>Aktionen</title>
            </meta>
            <properties>
                <property name="campaign_title" type="text_line">
                    <meta>
                        <title>Titel</title>
                    </meta>
                </property>
                <property name="campaign_text" type="text_line">
                    <meta>
                        <title>Text</title>
                    </meta>
                </property>
                <property name="campaign_image" type="single_media_selection">
                    <meta>
                        <title lang="en">Image</title>
                        <title lang="de">Bild</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="serviceDetails_1">
            <meta>
                <title>Angebote 1</title>
            </meta>
            <properties>
                <property name="service_image_1" type="single_media_selection" colspan="6">
                    <meta>
                        <title>Bild 1</title>
                    </meta>
                </property>
                <property name="service_text_1" type="text_editor" colspan="6">
                    <meta>
                        <title>Text 1</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="serviceDetails_2">
            <meta>
                <title>Angebot 2</title>
            </meta>
            <properties>
                <property name="service_image_2" type="single_media_selection" colspan="6">
                    <meta>
                        <title>Bild 2</title>
                    </meta>
                </property>
                <property name="service_text_2" type="text_editor" colspan="6">
                    <meta>
                        <title>Text 2</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="serviceDetails_3">
            <meta>
                <title>Angebot 3</title>
            </meta>
            <properties>
                <property name="service_image_3" type="single_media_selection" colspan="6">
                    <meta>
                        <title>Bild 3</title>
                    </meta>
                </property>
                <property name="service_text_3" type="text_editor" colspan="6">
                    <meta>
                        <title>Text 3</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="serviceDetails_4">
            <meta>
                <title>Angebot 4</title>
            </meta>
            <properties>
                <property name="service_image_4" type="single_media_selection" colspan="6">
                    <meta>
                        <title>Bild 4</title>
                    </meta>
                </property>
                <property name="service_text_4" type="text_editor" colspan="6">
                    <meta>
                        <title>Text 4</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="pricePackages">
            <meta>
                <title>Preise</title>
            </meta>
            <properties>
                <property name="price_package_title" type="text_line">
                    <meta>
                        <title>Titel</title>
                    </meta>
                </property>
                <property name="price_package_subtitle" type="text_line">
                    <meta>
                        <title>Untertitel</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="aboutme">
            <meta>
                <title>Ãœber mich</title>
            </meta>
            <properties>
                <property name="about_me_image" type="single_media_selection" colspan="6">
                    <meta>
                        <title>Bild</title>
                    </meta>
                </property>
                <property name="about_me_text" type="text_editor">
                    <meta>
                        <title>Beschreibung</title>
                    </meta>
                </property>
            </properties>
        </section>
    </properties>
</template>
