<?xml version="1.0" ?>
<!-- config/forms/album_details.xml -->
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>album_details</key>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title>sulu_admin.title</title>
            </meta>
        </property>

        <property name="image" type="single_media_selection">
            <meta>
                <title>sulu_admin.image</title>
            </meta>
        </property>

        <property name="tracklist" type="text_editor">
            <meta>
                <title>albums.tracklist</title>
            </meta>
        </property>
    </properties>
</form>