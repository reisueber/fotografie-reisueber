<?xml version="1.0" ?>

<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd">
    
    <key>price_package_details</key>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title>app.title</title>
            </meta>
        </property>

        <property name="price" type="number">
            <meta>
                <title>app.price</title>
            </meta>
        </property>
        
        <property name="description" type="text_area">
            <meta>
                <title>app.description</title>
            </meta>
        </property>

        <property name="bulletPoints" type="block">
            <meta>
                <title>app.bullet_points</title>
            </meta>
            <params>
                <param name="default_type" value="bulletPoint" />
            </params>
            <types>
                <type name="bulletPoint">
                    <meta>
                        <title>app.bullet_point</title>
                    </meta>
                    <properties>
                        <property name="text" type="text_line" mandatory="true">
                            <meta>
                                <title>app.text</title>
                            </meta>
                        </property>
                    </properties>
                </type>
            </types>
        </property>
    </properties>
</form> 