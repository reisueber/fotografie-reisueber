<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>blog_post_details</key>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="de">Titel</title>
                <title lang="en">Title</title>
            </meta>
        </property>

        <property name="slug" type="text_line" mandatory="true">
            <meta>
                <title lang="de">URL-Slug</title>
                <title lang="en">URL Slug</title>
            </meta>
        </property>

        <property name="teaser" type="text_area">
            <meta>
                <title lang="de">Teaser</title>
                <title lang="en">Teaser</title>
            </meta>
        </property>

        <property name="content" type="text_editor">
            <meta>
                <title lang="de">Inhalt</title>
                <title lang="en">Content</title>
            </meta>
        </property>

        <property name="image" type="single_media_selection">
            <meta>
                <title lang="de">Bild</title>
                <title lang="en">Image</title>
            </meta>
        </property>

        <property name="publishedAt" type="date">
            <meta>
                <title lang="de">Ver√∂ffentlichungsdatum</title>
                <title lang="en">Published At</title>
            </meta>
        </property>
    </properties>
</form>

